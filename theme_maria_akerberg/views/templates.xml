<odoo>
    <template id="recommended_products" inherit_id="website_sale.recommended_products">
        <xpath expr="//div[@t-if='product.alternative_product_ids']" position="attributes">
            <attribute name="style">display: none !important</attribute>
        </xpath>
    </template>

    <template id="shop_product_carousel" inherit_id="website_sale.shop_product_carousel" name="Shop Product Carousel">
        <xpath expr="//div[@id='o-carousel-product']/div[1]" position="attributes">
            <attribute name="style">border: 1px solid;</attribute>
        </xpath>
        <xpath expr="//div[@id='o-carousel-product']/div[2]" position="attributes">
            <attribute name="style">display: none !important</attribute>
        </xpath>

        <xpath expr="//div[@id='o-carousel-product']/div[2]" position="after">
            <div>
                <div class="container mt32" t-if="product.alternative_product_ids">
                    <h3>Alternative Products:</h3>
                    <div class="row mt16" style="">
                        <t t-foreach="product.alternative_product_ids" t-as="alt_product">
                            <div t-attf-class="o_carousel_product_card_wrap col-md-4">
                                <div class="o_carousel_product_card card h-100">
                                    <t t-set="combination_info" t-value="alt_product._get_combination_info()"/>
                                    <t t-set="product_variant" t-value="alt_product.env['product.product'].browse(combination_info['product_id'])"/>
                                    <input type="hidden" name="product-id" t-att-data-product-id="product_variant.id"/>
                                    <a class="o_carousel_product_img_link" t-att-href="alt_product.website_url">
                                        <div t-if="product_variant" t-field="product_variant.image_128" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded shadow o_alternative_product o_carousel_product_card_img_top card-img-top' }" />
                                        <div t-else="" t-field="alt_product.image_128" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded shadow o_alternative_product o_carousel_product_card_img_top card-img-top' }" />
                                    </a>
                                    <div class="o_carousel_product_card_body card-body border-top">
                                        <a t-att-href="alt_product.website_url" class="text-decoration-none">
                                            <h6 class="card-title mb-0 text-truncate" t-raw="alt_product.display_name"/>
                                        </a>
                                    </div>
                                    <div class="o_carousel_product_card_footer card-footer d-flex align-items-center">
                                        <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                            <del t-attf-class="text-danger mr-2 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" style="white-space: nowrap;" t-esc="combination_info['list_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}" />
                                            <span t-if="combination_info['price']" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            <span itemprop="price" style="display:none;" t-esc="combination_info['price']" />
                                            <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                                        </div>
                                        <button type="button" role="button" class="btn btn-primary alternative_js_add_cart ml-auto" title="Add to Cart">
                                            <i class="fa fa-fw fa-shopping-cart"/>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <div class="container mt32" t-if="product.accessory_product_ids">
                    <h3>Accessories Products:</h3>
                    <div class="row mt16" style="">
                        <t t-foreach="product.accessory_product_ids" t-as="product">
                            <div t-attf-class="o_carousel_product_card_wrap col-md-4">
                                <div class="o_carousel_product_card card h-100">
                                    <input type="hidden" name="product-id" t-att-data-product-id="product.id"/>
                                    <a class="o_carousel_product_img_link" t-att-href="product.website_url">
                                        <div t-field="product.image_128" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded shadow o_alternative_product o_carousel_product_card_img_top card-img-top' }" />
                                    </a>
                                    <div class="o_carousel_product_card_body card-body border-top">
                                        <a t-att-href="product.website_url" class="text-decoration-none">
                                            <h6 class="card-title mb-0 text-truncate" t-raw="product.display_name"/>
                                        </a>
                                    </div>
                                    <div class="o_carousel_product_card_footer card-footer d-flex align-items-center">
                                        <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                            <span t-if="product['lst_price']" t-esc="product['lst_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            <span itemprop="lst_price" style="display:none;" t-esc="product['lst_price']" />
                                            <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                                        </div>
                                        <button type="button" role="button" class="btn btn-primary accessories_js_add_cart ml-auto" title="Add to Cart">
                                            <i class="fa fa-fw fa-shopping-cart"/>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>


    <template id="product_list" inherit_id="website_sale.product">
        <xpath expr="//t[@t-placeholder='select']" position="replace">
            <t t-placeholder="select">
                <input type="hidden" class="product_id" name="product_id" t-att-value="product_variant.id" />
                <input type="hidden" class="product_template_id" name="product_template_id" t-att-value="product.id" />
                <t t-if="combination" t-call="theme_maria_akerberg.product_variants">
<!--                <t t-if="combination" t-call="sale.variants">-->
                    <t t-set="ul_class" t-value="'flex-column'" />
                    <t t-set="parent_combination" t-value="None" />
                </t>
                <t t-else="">
                    <ul class="d-none js_add_cart_variants" t-att-data-attribute_exclusions="{'exclusions: []'}"/>
                </t>
            </t>
        </xpath>

        <xpath expr="//div[@id='product_details']/div[1]" position="replace">
            <div>
                <div class="container">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home1" role="tab" aria-controls="home" aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile1" role="tab" aria-controls="profile" aria-selected="false">Usage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact1" role="tab" aria-controls="contact" aria-selected="false">Ingredients</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home1" role="tabpanel" aria-labelledby="home-tab">
                            <p t-field="product.description_sale" class="text-muted mt-3" placeholder="A short description that will also appear on documents." />
                            <div id="product_attributes_simple">
                                <hr t-if="sum([(1 if len(l.value_ids)==1 else 0) for l in product.attribute_line_ids])"/>
                                <p class="text-muted">
                                    <t t-set="single_value_attributes" t-value="product.valid_product_template_attribute_line_ids._prepare_single_value_for_display()"/>
                                    <t t-foreach="single_value_attributes" t-as="attribute">
                                        <span t-field="attribute.name"/>:
                                        <t t-foreach="single_value_attributes[attribute]" t-as="ptal">
                                            <span t-field="ptal.product_template_value_ids._only_active().name"/><t t-if="not ptal_last">, </t>
                                        </t>
                                        <br/>
                                    </t>
                                </p>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile1" role="tabpanel" aria-labelledby="profile-tab">2</div>
                        <div class="tab-pane fade" id="contact1" role="tabpanel" aria-labelledby="contact-tab">3</div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="add_grid_or_list_option" inherit_id="website_sale.add_grid_or_list_option">
        <xpath expr="//div[hasclass('o_wsale_apply_layout')]" position="after">
            <div class="search-duplicate">
                <t t-call="website_sale.search">
                    <t t-set="_classes" t-valuef="w-100 w-md-auto mt-2"/>
                </t>
            </div>
        </xpath>
    </template>

    <template id="products" inherit_id="website_sale.products">
        <xpath expr="//div[hasclass('products_pager')]" position="before">
            <t t-if="category">
                <t t-set='editor_msg'>Drag building blocks here to customize the header for "<t t-esc='category.name'/>" category.</t>
                <div class="mb16" id="category_header" t-att-data-editor-message="editor_msg" t-field="category.website_description"/>
            </t>
        </xpath>

        <xpath expr="//div[@id='products_grid']/t[@t-if='category']" position="replace">
            <span/>
        </xpath>

        <xpath expr="//div[hasclass('products_pager')]/t[@t-call='website_sale.search']" position="replace">
            <span/>
        </xpath>
    </template>

    <template id="products_item" inherit_id="website_sale.products_item" name="Products">
        <xpath expr="//form[hasclass('oe_product_cart')]" position="replace">
            <form action="/shop/cart/update" method="post" class="card oe_product_cart"
                t-att-data-publish="product.website_published and 'on' or 'off'"
                itemscope="itemscope" itemtype="http://schema.org/Product">
                <div class="card-body p-1 oe_product_image" id="o-variant-product">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                    <!--<div id="o-carousel-product">-->
                    <a t-att-href="product_href" class="d-block h-100" itemprop="url">
                        <t t-set="image_holder" t-value="product._get_image_holder()"/>
                        <span t-field="image_holder.image_1920"
                              t-options="{'widget': 'image', 'preview_image': 'image_1024' if product_image_big else 'image_256'}"
                              class="d-flex h-100 justify-content-center align-items-center"/>
                    </a>
                </div>
                <div class="card-body p-0 text-center o_wsale_product_information">
                    <t t-set="combination" t-value="product._get_first_possible_combination()"/>
                    <t t-set="combination_info" t-value="product._get_combination_info(combination, add_qty=add_qty or 1, pricelist=pricelist)"/>
                    <t t-set="product_variant" t-value="product.env['product.product'].browse(combination_info['product_id'])"/>

                    <div class="p-2 o_wsale_product_information_text">
                        <h6 class="o_wsale_products_item_title">
                            <a itemprop="name" t-att-href="product_href" t-att-content="product.name" t-field="product.name" />
                            <a role="button" t-if="not product.website_published" t-att-href="product_href" class="btn btn-sm btn-danger" title="This product is unpublished.">Unpublished</a>
                        </h6>

                        <div class="js_product js_main_product" style="text-align: left;">
                            <t t-placeholder="select">
                                <input type="hidden" class="product_id" name="product_id" t-att-value="product_variant.id" />
                                <input type="hidden" class="product_template_id" name="product_template_id" t-att-value="product.id" />

                                <t t-if="combination" t-call="theme_maria_akerberg.product_variants">
                                    <t t-set="ul_class" t-value="'flex-column'" />
                                    <t t-set="parent_combination" t-value="None" />
                                </t>
                                <t t-else="">
                                    <ul class="d-none js_add_cart_variants" t-att-data-attribute_exclusions="{'exclusions: []'}"/>
                                </t>

                                <t t-call="website_sale.product_price" />
                                <p t-if="True" class="css_not_available_msg alert alert-warning">This combination does not exist.</p>

                            </t>
                        </div>

                    </div>
                    <div class="o_wsale_product_btn"/>
                </div>
            </form>
        </xpath>
    </template>

</odoo>

