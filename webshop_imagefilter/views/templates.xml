<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="product_recipe" inherit_id="website_sale.products_item" name="Replaces the product thumbnail with a ImageMagick recipe" priority="99" >
    <xpath expr="//form//a[1]" position="replace">
      <a t-att-href="product_href" class="d-block h-100" itemprop="url">
        <t t-set="pid" t-value="product.id" />
        <img t-if="product.image_1920" t-att-src="website.imagefield_hash('product.template','image_1920',pid,'webshop_imagefilter.img_product')" />
      </a>
    </xpath>
  </template>
  
    <template id="productview_recipe" inherit_id="website_sale.shop_product_carousel" name="Replaces the product image with a ImageMagick recipe" priority="99" >
    <xpath expr="//div[@t-else]" position="replace">
      <div t-att-href="product_href" class="d-flex align-items-center justify-content-center h-100" itemprop="url">
        <t t-set="pid" t-value="product.id" />
        <img class="img img-fluid product_detail_img mh-100" t-if="product.image_1920" t-att-src="website.imagefield_hash('product.template','image_1920',pid,'webshop_imagefilter.img_productview')" />
      </div>
    </xpath>
  </template>
</odoo>
